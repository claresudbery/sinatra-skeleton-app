<% unless @name.to_s.empty? %>
  <h1>Hello <%= @name %></h1>
<% end %>

<form action="/monstas" method="post">
  <input type="text" name="name" value="<%= @name %>">
  <input type="submit">
</form>

<ul>
  <% @names.each do |name| %>
    <li><%= name %></li>
  <% end %>
<ul>

<% if @message %>
  <p><%= @message %></p>
<% end %>